@{
  Layout = "_Layout";
}

<h3>Add a new job:</h3>
<form action="/person/jobs" method="post">
  <div class="form-group">
    <label for="companyName">Company Name</label>
    <input id="companyName" type="text" name="companyName">
  </div>
  <div class="form-group">
    <label for="jobTitle">Job Title</label>
    <input id="jobTitle" type="text" name="jobTitle">
  </div>
  <div class="form-group">
    <label for="jobStart">Job Start</label>
    <input id="jobStart" type="date" name="jobStart">
  </div>
  <div class="form-group">
    <label for="jobEnd">Job End</label>
    <input id="jobEnd" type="date" name="jobEnd">
  </div>
  <div class="form-group">
    <label for="jobDescription">Job Description</label>
    <input id="jobDescription" type="text" name="jobDescription">
  </div>
  <div class="form-group">
    <button type="submit" class="btn-lg btn-warning">Add job</button>
    <a href="/person/new"><button type="button" class="btn-lg btn-info">Change Profile</button></a>
  </div>
</form>
